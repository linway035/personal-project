{{!-- Header --}}
<div class="d-flex" style="margin:16px 0;">
  <a href="javascript:history.back()">
    <img src="/images/icons/outlined-back.png" style="height:24px; margin-left:28px">
  </a>
  <div class="d-flex flex-column" style="margin-left:19px">
    <span style="line-height: 26px; font-weight:700; font-size:18px; color:#171725">{{userProfile.name}}</span>
  </div>
</div>
{{!-- card --}}
<div style="height: 378px;">
  <div style="height: 264px; position:relative;">
    <img src="{{userProfile.cover}}" alt="cover"
      style="height: 200px;width:639px; object-fit:cover;position:absolute;top:0;left:0">
    <img src="{{userProfile.avatar}}" alt="avatar"
      style="height:140px; width:140px; border: 4px solid #FFFFFF;position:absolute;bottom:0;left:16px; z-index:1; border-radius:50%">
    {{#if isCurrentUser }}
    <button type="button" class="btn btn-outline-info float-end"
      style="border-radius:50px;line-height: 24px; height:40px; width:128px; border-color:#43BFFD;font-size:16px; font-weight:400;margin-top:216px;margin-right:16px;"
    >
      It's me
    </button>
    {{else if userProfile.is_following }}
    <form action="/followships/profile/{{userProfile.id}}" method="POST" style="display: contents;">
      <button type="submit" class="following-btn float-end" style="margin-top: 216px; margin-right: 16px;">Following</button>
    </form>
    {{else}}
    <form action="/followships/profile" method="POST" style="display: contents;">
      <input type="text" name="id" value="{{userProfile.id}}" style="display: none;">
      <button type="submit" class="follow-btn float-end" style="margin-top: 216px; margin-right: 16px;">Follow</button>
    </form>
    {{/if}}
    <button type="button" class="btn btn-outline-info float-end"data-receiverId="{{userProfile.id}}"
      style="border-radius:50px;line-height: 24px; height:40px; border-color:#43BFFD;font-size:16px; font-weight:400;margin-top:216px;margin-right:16px;"
      id="pro-mess">
      <img src="/images/icons/outlined-message.png" style="height: 20px;">
    </button>
  </div>

  <div class="d-flex flex-column" style="height:114px; margin-left:16px">
    <span style="line-height: 26px; font-weight:700; font-size:18px">{{userProfile.name}}</span>
    <div class="profile-intro" style="word-wrap: normal; text-overflow:ellipsis; overflow:hidden;">
      {{userProfile.bio}}
      <span class="tooltiptext"
        style="line-height: 22px; font-weight:400; font-size:14px; margin-top:6px">{{userProfile.bio}}</span>
    </div>
    <div class="d-flex align-items-center" style="line-height: 22px; font-weight:400; font-size:14px;margin-top:8px">
      <a href="/users/{{userProfile.id}}/followings">
        <span style="color: #171725;">{{userProfile.following_count}} </span>
        <span style="color: #6C757D;">Following</span>
      </a>
      <a href="/users/{{userProfile.id}}/followers">
        <span style="color: #171725;margin-left:20px ;">{{userProfile.followers_count}} </span>
        <span style="color: #6C757D;">Followers</span>
      </a>
    </div>
  </div>
</div>

<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
<script src="/javascripts/profile.js"></script>
