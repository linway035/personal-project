<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<div class="d-flex" style="height: 1200px;width:1400px;margin: 0 auto;">
  {{>sidebar route='search'}}
  <div class="tweets-mid"
    style="width:641px;height: 1200px;border-left: 1px solid #e6ecf0; border-right: 1px solid #e6ecf0;">
    <div>
      <form action="/search/people">
        <input type="text" name="q" placeholder="Search" value="{{q}}">
      </form>
    </div>
    <nav style="display: flex; align-items: center; justify-content: space-around;">
      <div style="margin: 0 12px; font-size: 16px; color: #6C757D; cursor: pointer;">
        <a href="/search">Top</a>
      </div>
      <div style="margin: 0 12px; font-size: 16px; color: #6C757D; cursor: pointer;">
        <a href="/search/people">People</a>
      </div>
    </nav>
    <div>
      {{#each userSearchResult}}
      <div class="d-flex each-tweet" style="padding: 16px 0;width: 639px;">
        <div id="tweet-icon">
          <a href="/users/{{this.id}}/tweets">
            <img src="{{this.avatar}}" alt="" width="50" height="50" class="rounded-circle" />
          </a>
        </div>
        <div id="tweet-right" style="width: 528px;">
          <div class="header" style="cursor: pointer;">
            <a href="/users/{{this.id}}/profile">
              <span style="font-size: 16px; line-height: 26px; font-weight: 700;color: #171725;">{{this.name}}</span>
            </a>
          </div>
          <div class="content-word">
            {{this.bio}}
          </div>
        </div>
        <div style="margin-right: 15px;">
          {{#if this.is_current_user }}
          <div></div>
          {{else if this.is_following }}
          <form action="/followships/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="following-btn">Following</button>
          </form>
          {{else}}
          <form action="/followships" method="POST" style="display: contents;">
            <input type="text" name="id" value="{{this.id}}" style="display: none;">
            <button type="submit" class="follow-btn">Follow</button>
          </form>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>

  </div>
  {{>popular}}
</div>

